{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.10-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": ["README.md"]
    },
    "vscode": {
      "settings": {
        "json.schemaDownload.enable": true,
        "flake8.args": [
          "--max-line-length=99",
          "--ignore=E203,E731,E402,W503"
        ],
        "black-formatter.args": [
          "--line-length=99"
        ],
        "black.args": [
          "--line-length=99"
        ],
        "isort.args": [
          "--line-length=99",
          "--profile",
          "black"
        ],
        "python.formatting.blackPath": "venv/bin/black",
        "python.formatting.provider": "black",
        "python.defaultInterpreterPath": "/workspaces/MunjeLumenDS2025/venv/bin/python",
        "editor.formatOnSave": false,
        "notebook.formatOnSave.enabled": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "python.analysis.enableSyncServer": true,
        "python.jediEnabled": true,
        "python.analysis.autoImportCompletions": true,
        "python.analysis.memory.keepLibraryAst": false,
        "interactiveWindow.executeWithShiftEnter": true,
        "jupyter.enableExtendedPythonKernelCompletions": true,
        "python.languageServer": "Pylance",
        "extensions.autoCheckUpdates": false,
        "update.showReleaseNotes": false,
        "python.analysis.enablePytestSupport": false,
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/node_modules/**": true,
          "**/logs/**": true,
          "**/data/**": true
        },
        "files.exclude": {
          "**/.git": true,
          "**/.svn": true,
          "**/.hg": true,
          "**/CVS": true,
          "**/.DS_Store": true,
          "**/node_modules": true,
          "**/bower_components": true
        },
        "search.followSymlinks": false,
        "workbench.colorTheme": "Default Dark+",
        "workbench.editorLargeFileConfirmation": 100,
        "git.openRepositoryInParentFolders": "never",
        "flake8.importStrategy": "fromEnvironment",
        "isort.importStrategy": "fromEnvironment",
        "black-formatter.importStrategy": "fromEnvironment",
        "black.importStrategy": "fromEnvironment",
        "python.analysis.exclude": [
          "**/devenv",
          "**/.git",
          "**/__pycache__",
          "**/node_modules",
          "**/data/**",
          "**/logs/**"
        ],
        "files.eol": "\n",
        "python.analysis.diagnosticSeverityOverrides": {
          "reportAttributeAccessIssue": "none",
          "reportOptionalMemberAccess": "none"
        },
        "python.analysis.typeCheckingMode": "off"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.flake8"
      ]
    }
  },
  "runArgs": [
    "--gpus",
    "all",
    "--shm-size=36g"
  ],
  "forwardPorts": [
    8501,
    6006
  ],
  "postCreateCommand": "bash .devcontainer/initialize.sh",
  "remoteUser": "vscode",
"remoteEnv": {
  "SSH_AUTH_SOCK": "/run/host-services/ssh-auth.sock"
}


}
